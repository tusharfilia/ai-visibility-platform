# ===== Core Server =====
PORT=8080
NODE_ENV=development
# Comma-separated list of allowed origins (no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# ===== Auth (Lovable Cloud) =====
AUTH_JWT_ISSUER=https://auth.lovable.dev
AUTH_JWT_AUDIENCE=ai-visibility-platform
AUTH_JWT_JWKS_URL=https://auth.lovable.dev/.well-known/jwks.json
# Dev-only bypass: if true and NODE_ENV !== production, allow a dummy user when no/invalid token
DEBUG_JWT_MODE=true

# ===== Database =====
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_visibility

# ===== Cache/Queues =====
REDIS_URL=redis://localhost:6379

# ===== Providers =====
# Use recorded fixtures instead of real API calls
MOCK_PROVIDERS=true
PERPLEXITY_API_KEY=
SERPAPI_KEY=
BRAVE_API_KEY=

# ===== Feature Flags =====
PERPLEXITY_ENABLED=true
AIO_ENABLED=true
BRAVE_ENABLED=true
FULL_AUTO_DEFAULT=false
BRAND_DEFENSE_ENABLED=true

# ===== Observability =====
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=
PROMETHEUS_ENABLED=true
PROMETHEUS_METRICS_PORT=9464

# ===== Cost Management =====
BUDGET_DAILY_DEFAULT=500   # cents
AUTO_THROTTLE_ENABLED=true
