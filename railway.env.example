# Railway Production Environment Variables
# Copy these to Railway Dashboard â†’ Variables tab

# ===== CRITICAL =====
NODE_ENV=production
PORT=8080
MOCK_PROVIDERS=false

# ===== NEW SEARCH PROVIDER KEYS =====
# Get these from: Perplexity (https://www.perplexity.ai/settings/api), Brave (https://brave.com/search/api/), SerpAPI (https://serpapi.com/)
PERPLEXITY_API_KEY=YOUR_PERPLEXITY_KEY_HERE
BRAVE_API_KEY=YOUR_BRAVE_KEY_HERE
SERPAPI_KEY=YOUR_SERPAPI_KEY_HERE

# ===== EXISTING LLM PROVIDERS =====
# Add your API keys here
OPENAI_API_KEY=YOUR_OPENAI_KEY_HERE
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_KEY_HERE
GOOGLE_AI_API_KEY=YOUR_GOOGLE_AI_KEY_HERE

# ===== EMAIL SERVICE =====
RESEND_API_KEY=YOUR_RESEND_KEY_HERE

# ===== CLOUDFLARE R2 =====
# Get these from Cloudflare R2 dashboard
CLOUDFLARE_R2_ACCESS_KEY_ID=YOUR_R2_ACCESS_KEY_ID_HERE
CLOUDFLARE_R2_SECRET_ACCESS_KEY=YOUR_R2_SECRET_ACCESS_KEY_HERE
CLOUDFLARE_R2_ENDPOINT=YOUR_R2_ENDPOINT_HERE
CLOUDFLARE_R2_BUCKET=ai-visibility-assets
CLOUDFLARE_ACCOUNT_ID=YOUR_R2_ACCOUNT_ID_HERE

# ===== AUTH (Lovable Cloud) =====
AUTH_JWT_ISSUER=https://auth.lovable.dev
AUTH_JWT_AUDIENCE=ai-visibility-platform
AUTH_JWT_JWKS_URL=https://auth.lovable.dev/.well-known/jwks.json
DEBUG_JWT_MODE=false

# ===== CORS =====
CORS_ALLOWED_ORIGINS=*

# ===== FEATURE FLAGS =====
PERPLEXITY_ENABLED=true
AIO_ENABLED=true
BRAVE_ENABLED=true
FULL_AUTO_DEFAULT=false
BRAND_DEFENSE_ENABLED=true

# ===== OBSERVABILITY =====
PROMETHEUS_ENABLED=true
LOG_LEVEL=info

# ===== COST MANAGEMENT =====
BUDGET_DAILY_DEFAULT=500
AUTO_THROTTLE_ENABLED=true

# ===== DATABASE & REDIS =====
# Note: DATABASE_URL and REDIS_URL are automatically set by Railway
# when you add PostgreSQL and Redis services

